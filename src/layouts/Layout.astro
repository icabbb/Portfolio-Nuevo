---
import '@/styles/global.css';
import { ViewTransitions } from 'astro:transitions';


import { i18nConfig } from '../i18n';
import Header from '@/components/react/Header';
import { Toaster } from '@/components/ui/toaster';
import Footer from '@/components/react/Footer';


interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang={i18nConfig.lng}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Inter:wght@400;500&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
          
    <ViewTransitions />
    <script>
      // Inline script to initialize i18next on the client side
      import i18next from 'i18next';
      import { initReactI18next } from 'react-i18next';
      import Backend from 'i18next-http-backend';
      import { i18nConfig } from '../i18n';

      i18next
        .use(Backend)
        .use(initReactI18next)
        .init(i18nConfig);
    </script>
  </head>
  <body class="bg-gradient-to-br from-gray-100 via-white to-gray-200 dark:from-gray-900 dark:via-black dark:to-gray-900 text-gray-800 dark:text-white min-h-screen transition-colors duration-300">
    <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-emerald-200/20 via-transparent to-transparent dark:from-blue-900/20 dark:via-transparent dark:to-transparent"></div>
    <div class="relative z-10">
      <Header client:load />
      <main class="pt-16"> <!-- Added padding-top to account for fixed header -->
        <slot />
        <Toaster />
      </main>
      <Footer client:load/>
    </div>
  </body>
</html>